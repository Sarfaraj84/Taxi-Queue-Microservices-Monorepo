{
  "name": "user-service",
  "version": "1.0.0",
  "description": "user-service gRPC microservice",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "compile-proto": "npm run compile-proto:js && npm run compile-proto:ts",
    "compile-proto:js": "grpc_tools_node_protoc --js_out=import_style=commonjs,binary:src/proto/ --grpc_out=grpc_js:src/proto/ --proto_path=src/proto/ src/proto/*.proto",
    "compile-proto:ts": "protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --ts_out=src/proto/ --proto_path=src/proto/ src/proto/*.proto",
    "test": "jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:build": "docker build -t user-service .",
    "docker:run": "docker run -p 50052:50052 user-service"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.8.0",
    "@grpc/proto-loader": "^0.7.0",
    "google-protobuf": "^3.21.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^6.0.1",
    "dotenv": "^16.0.3",
    "mongoose": "^6.8.0",
    "express-validator": "^6.14.3"
  },
  "devDependencies": {
    "grpc-tools": "^1.12.0",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "nodemon": "^2.0.20",
    "jest": "^29.3.1",
    "eslint": "^8.31.0",
    "@types/node": "^18.11.0",
    "supertest": "^6.3.3"
  }
}
